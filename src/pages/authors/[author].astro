---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import Button from '../../components/ui/Button.astro';
import { getCollection, getEntry } from 'astro:content';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const authors = await getCollection('authors');

  return authors.map(author => ({
    params: { author: author.id },
    props: { author },
  }));
}

const { author } = Astro.props;

// Get all posts by this author
const allPosts = await getCollection('blog');
const authorPosts = allPosts
  .filter(post => {
    if (post.data.draft) return false;
    return post.data.authors.some(authorRef => {
      const authorId = typeof authorRef === 'string' ? authorRef : authorRef.id;
      return authorId === author.id;
    });
  })
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<BaseLayout
  title={`${author.data.name} - Claude Code Blog`}
  description={author.data.bio}
  image={author.data.avatar}
>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Back Button -->
    <div class="mb-8">
      <Button href="/authors" variant="ghost" size="sm">
        ← Back to Authors
      </Button>
    </div>

    <!-- Author Profile Header -->
    <div class="max-w-4xl mx-auto mb-12">
      <Card class="p-8 md:p-12">
        <div class="flex flex-col md:flex-row gap-8 items-start">
          <!-- Avatar -->
          <img
            src={author.data.avatar}
            alt={author.data.name}
            class="w-32 h-32 rounded-full border-4 border-[rgb(var(--color-clay))] clay-glow flex-shrink-0"
          />

          <!-- Info -->
          <div class="flex-1">
            <h1 class="text-4xl md:text-5xl font-mono font-bold mb-4">
              {author.data.name}
            </h1>

            <p class="text-xl text-[rgb(var(--color-text-muted))] mb-6">
              {author.data.bio}
            </p>

            <!-- Stats -->
            <div class="flex flex-wrap gap-4 mb-6">
              <div class="flex items-center gap-2">
                <span class="text-2xl font-mono font-bold text-[rgb(var(--color-clay))]">
                  {authorPosts.length}
                </span>
                <span class="text-[rgb(var(--color-text-muted))]">
                  {authorPosts.length === 1 ? 'Post' : 'Posts'}
                </span>
              </div>
            </div>

            <!-- Social Links -->
            {author.data.social && (
              <div class="flex flex-wrap gap-4">
                {author.data.social.github && (
                  <a
                    href={`https://github.com/${author.data.social.github}`}
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[rgb(var(--color-surface))] border border-[rgb(var(--color-border))] rounded-lg hover:border-[rgb(var(--color-clay))] transition-colors font-mono text-sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
                    </svg>
                    GitHub
                  </a>
                )}
                {author.data.social.twitter && (
                  <a
                    href={`https://twitter.com/${author.data.social.twitter}`}
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[rgb(var(--color-surface))] border border-[rgb(var(--color-border))] rounded-lg hover:border-[rgb(var(--color-clay))] transition-colors font-mono text-sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Twitter
                  </a>
                )}
                {author.data.social.linkedin && (
                  <a
                    href={`https://linkedin.com/in/${author.data.social.linkedin}`}
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[rgb(var(--color-surface))] border border-[rgb(var(--color-border))] rounded-lg hover:border-[rgb(var(--color-clay))] transition-colors font-mono text-sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    LinkedIn
                  </a>
                )}
                {author.data.social.website && (
                  <a
                    href={author.data.social.website}
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[rgb(var(--color-surface))] border border-[rgb(var(--color-border))] rounded-lg hover:border-[rgb(var(--color-clay))] transition-colors font-mono text-sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Website
                  </a>
                )}
                {author.data.social.medium && (
                  <a
                    href={author.data.social.medium}
                    class="inline-flex items-center gap-2 px-4 py-2 bg-[rgb(var(--color-surface))] border border-[rgb(var(--color-border))] rounded-lg hover:border-[rgb(var(--color-clay))] transition-colors font-mono text-sm"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M13.54 12a6.8 6.8 0 01-6.77 6.82A6.8 6.8 0 010 12a6.8 6.8 0 016.77-6.82A6.8 6.8 0 0113.54 12zM20.96 12c0 3.54-1.51 6.42-3.38 6.42-1.87 0-3.39-2.88-3.39-6.42s1.52-6.42 3.39-6.42 3.38 2.88 3.38 6.42M24 12c0 3.17-.53 5.75-1.19 5.75-.66 0-1.19-2.58-1.19-5.75s.53-5.75 1.19-5.75C23.47 6.25 24 8.83 24 12z"/>
                    </svg>
                    Medium
                  </a>
                )}
              </div>
            )}
          </div>
        </div>
      </Card>
    </div>

    <!-- Posts Section -->
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-mono font-bold mb-8">
        Posts by {author.data.name}
      </h2>

      {authorPosts.length > 0 ? (
        <div class="space-y-6">
          {authorPosts.map((post) => (
            <Card hover class="p-6">
              <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
                <div class="flex-1">
                  <!-- Tags -->
                  <div class="flex flex-wrap gap-2 mb-3">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <a href={`/blog/tag/${tag}`}>
                        <Badge variant={post.data.featured ? 'clay' : 'default'}>
                          {tag}
                        </Badge>
                      </a>
                    ))}
                    {post.data.featured && (
                      <Badge variant="mint">Featured</Badge>
                    )}
                  </div>

                  <!-- Title -->
                  <h3 class="text-xl md:text-2xl font-mono font-semibold mb-2">
                    <a
                      href={`/blog/${post.id}`}
                      class="hover:text-[rgb(var(--color-clay))] transition-colors duration-300"
                    >
                      {post.data.title}
                    </a>
                  </h3>

                  <!-- Description -->
                  <p class="text-[rgb(var(--color-text-muted))] mb-4">
                    {post.data.description}
                  </p>

                  <!-- Date -->
                  <time
                    datetime={post.data.publishDate.toISOString()}
                    class="text-sm text-[rgb(var(--color-text-muted))]"
                  >
                    {formatDate(post.data.publishDate)}
                  </time>
                </div>

                <!-- Read More -->
                <a
                  href={`/blog/${post.id}`}
                  class="text-sm font-mono text-[rgb(var(--color-clay))] hover:underline whitespace-nowrap"
                >
                  Read more →
                </a>
              </div>
            </Card>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-xl text-[rgb(var(--color-text-muted))]">
            No posts yet. Check back soon!
          </p>
        </div>
      )}
    </div>
  </div>
</BaseLayout>
