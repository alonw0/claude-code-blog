              {author.data.social && (
                <div class="flex gap-3 text-sm">
                  {author.data.social.github && (
                    <a
                      href={`https://github.com/${author.data.social.github}`}
                      class="text-[rgb(var(--color-clay))] hover:underline"
                      target="_blank"
                      rel="noopener noreferrer"
