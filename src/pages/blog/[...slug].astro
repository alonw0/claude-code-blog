    id="reading-progress-indicator"
    class="fixed top-20 right-4 md:right-8 z-50 px-3 py-1.5 bg-[rgb(var(--color-surface))]/90 backdrop-blur-sm border border-[rgb(var(--color-border))] rounded-md font-mono text-xs text-[rgb(var(--color-clay))] opacity-0 transition-opacity duration-300 pointer-events-none"
    aria-live="polite"
    aria-atomic="true"
  >
    <span id="progress-percentage">0</span>%
  </div>

  <!-- Back to Top Button (Mobile Only) -->
  <button
    id="back-to-top"
    class="md:hidden fixed bottom-6 right-4 z-50 w-12 h-12 bg-[rgb(var(--color-surface))]/90 backdrop-blur-sm border-2 border-[rgb(var(--color-clay))] rounded-full flex items-center justify-center text-[rgb(var(--color-clay))] font-mono text-xl opacity-0 pointer-events-none transition-all duration-300 active:scale-90"
    style="box-shadow: 0 4px 12px rgba(var(--color-clay-glow));"
    aria-label="Back to top"
    type="button"
  >
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
      <path stroke-linecap="round" stroke-linejoin="round" d="M5 10l7-7m0 0l7 7m-7-7v18" />
    </svg>
  </button>

  <!-- Zen Mode Toggle Button -->
  <button
    id="zen-mode-toggle"
    class="hidden fixed bottom-6 left-4 z-50 w-12 h-12 bg-[rgb(var(--color-surface))]/90 backdrop-blur-sm border-2 border-[rgb(var(--color-border))] rounded-full items-center justify-center text-[rgb(var(--color-text))] hover:border-[rgb(var(--color-clay))] hover:text-[rgb(var(--color-clay))] transition-all duration-300 hover:scale-110 active:scale-90 group"
    style="box-shadow: 0 4px 12px rgba(var(--color-border));"
    aria-label="Toggle Zen Mode (Press Z)"
    type="button"
    title="Zen Mode (Z)"
  >
    <svg class="w-6 h-6 transition-transform duration-300 group-hover:rotate-90" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
