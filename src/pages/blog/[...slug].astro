  <style>
    /* Zen Mode Styles */
    body.zen-mode {
      overflow-x: hidden;
    }

    /* Hide elements in zen mode */
    body.zen-mode [data-zen-hide],
    body.zen-mode header:has(nav),
    body.zen-mode footer {
      opacity: 0;
      pointer-events: none;
      transition: opacity 400ms ease-out;
    }

    /* Zen mode content adjustments */
    body.zen-mode #zen-article-title {
      max-width: 750px;
      margin: 0 auto 3rem;
      font-size: 2.5rem;
      line-height: 1.2;
      text-align: center;
      opacity: 1;
      transform: translateY(0);
      transition: opacity 400ms ease-out, transform 400ms ease-out;
    }

    body.zen-mode #zen-article-content {
      max-width: 720px;
      margin: 0 auto;
      padding: 0 2rem;
      opacity: 1;
      transform: scale(1);
      transition: opacity 400ms ease-out 100ms, transform 400ms ease-out 100ms;
    }

    body.zen-mode #zen-article-content .prose {
      font-size: 1.125rem !important;
      line-height: 1.9 !important;
      max-width: none;
    }

    body.zen-mode #zen-article-content .prose p {
      font-size: 1.125rem !important;
      line-height: 1.9 !important;
    }

    /* Zen mode overlay */
    body.zen-mode::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(var(--color-background), 0.95);
      backdrop-filter: blur(8px);
      z-index: 1;
      opacity: 1;
      transition: opacity 400ms ease-out;
    }

    /* Keep article and zen button above overlay */
    body.zen-mode #blog-article {
      position: relative;
      z-index: 2;
      padding-top: 4rem;
    }

    body.zen-mode #zen-mode-toggle {
      z-index: 3;
      border-color: rgb(var(--color-clay));
      color: rgb(var(--color-clay));
      box-shadow: 0 4px 16px rgba(var(--color-clay-glow));
    }

    /* Keep progress bar visible in zen mode */
    body.zen-mode #reading-progress-container {
      z-index: 3;
    }

    /* Hide other floating buttons in zen mode */
    body.zen-mode #back-to-top,
    body.zen-mode #reading-progress-indicator {
      opacity: 0 !important;
      pointer-events: none !important;
    }

    /* Smooth transitions for entering/exiting */
    #zen-article-title,
    #zen-article-content {
      transition: all 0ms;
    }

    body.zen-mode-entering #zen-article-title {
      animation: zenFadeIn 400ms ease-out forwards;
    }

    body.zen-mode-entering #zen-article-content {
      animation: zenFadeIn 400ms ease-out 100ms forwards;
    }

    @keyframes zenFadeIn {
      from {
        opacity: 0;
        transform: translateY(20px) scale(0.98);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    /* Responsive zen mode */
    @media (max-width: 768px) {
      body.zen-mode #zen-article-title {
        font-size: 2rem;
      }

      body.zen-mode #zen-article-content {
        padding: 0 1.5rem;
      }

      body.zen-mode #zen-article-content .prose {
        font-size: 1.0625rem !important;
      }

      body.zen-mode #zen-article-content .prose p {
        font-size: 1.0625rem !important;
      }
    }
  </style>

  <script>
    // Reading Progress Bar & Back to Top Button
    (() => {
      const progressBar = document.getElementById('reading-progress-bar');
      const progressIndicator = document.getElementById('reading-progress-indicator');
      const progressPercentage = document.getElementById('progress-percentage');
      const backToTopBtn = document.getElementById('back-to-top');

      if (!progressBar || !progressIndicator || !progressPercentage) return;

      // Check for reduced motion preference
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      let ticking = false;
      let lastScrollY = 0;
      let hideIndicatorTimeout: number | null = null;

      const SCROLL_THRESHOLD = 300; // Show back-to-top after scrolling 300px

      function updateProgress() {
        const windowHeight = window.innerHeight;
        const documentHeight = document.documentElement.scrollHeight;
        const scrollTop = window.scrollY || document.documentElement.scrollTop;

        // Calculate progress (0 to 1)
        const scrollableHeight = documentHeight - windowHeight;
        const progress = scrollableHeight > 0 ? Math.min(scrollTop / scrollableHeight, 1) : 0;

        // Update progress bar width using transform for better performance
        progressBar.style.transform = `scaleX(${progress})`;

        // Update percentage indicator
        const percentage = Math.round(progress * 100);
        progressPercentage.textContent = percentage.toString();

        // Show/hide indicator based on scroll position
        if (scrollTop > 100) {
          progressIndicator.style.opacity = '1';

          // Auto-hide indicator after 2 seconds of no scrolling
          if (hideIndicatorTimeout) {
            clearTimeout(hideIndicatorTimeout);
          }
          hideIndicatorTimeout = window.setTimeout(() => {
            if (!prefersReducedMotion) {
              progressIndicator.style.opacity = '0';
            }
          }, 2000);
        } else {
          progressIndicator.style.opacity = '0';
        }

        // Show/hide back-to-top button based on scroll position
        if (backToTopBtn) {
          if (scrollTop > SCROLL_THRESHOLD) {
            backToTopBtn.style.opacity = '1';
            backToTopBtn.style.pointerEvents = 'auto';
          } else {
            backToTopBtn.style.opacity = '0';
            backToTopBtn.style.pointerEvents = 'none';
          }
        }

        ticking = false;
      }

      function requestTick() {
        if (!ticking) {
          window.requestAnimationFrame(updateProgress);
          ticking = true;
        }
      }

      // Throttled scroll handler
      function handleScroll() {
        lastScrollY = window.scrollY;
        requestTick();
      }

      // Back to top button click handler
      if (backToTopBtn) {
        backToTopBtn.addEventListener('click', () => {
          window.scrollTo({
            top: 0,
            behavior: prefersReducedMotion ? 'auto' : 'smooth'
          });
        });
      }

      // Initial update
      updateProgress();

      // Listen for scroll events
      window.addEventListener('scroll', handleScroll, { passive: true });

      // Update on resize (viewport changes)
      window.addEventListener('resize', requestTick, { passive: true });

      // Cleanup function (for Astro's client-side routing if enabled)
      document.addEventListener('astro:before-swap', () => {
        window.removeEventListener('scroll', handleScroll);
        window.removeEventListener('resize', requestTick);
        if (hideIndicatorTimeout) {
          clearTimeout(hideIndicatorTimeout);
        }
      });
    })();

    // Social Share Functionality
    (() => {
      // Bottom share buttons
      const nativeShareBtn = document.getElementById('native-share-btn');
      const twitterShareBtn = document.getElementById('twitter-share-btn');
      const linkedinShareBtn = document.getElementById('linkedin-share-btn');
      const whatsappShareBtn = document.getElementById('whatsapp-share-btn');

      // Top compact share buttons
      const compactNativeShareBtn = document.getElementById('compact-native-share-btn');
      const compactTwitterShareBtn = document.getElementById('compact-twitter-share-btn');
      const compactLinkedinShareBtn = document.getElementById('compact-linkedin-share-btn');
      const compactWhatsappShareBtn = document.getElementById('compact-whatsapp-share-btn');

      // Get current page data
      const pageUrl = window.location.href;
      const pageTitle = document.querySelector('h1')?.textContent || document.title;
      const pageDescription = document.querySelector('meta[name="description"]')?.getAttribute('content') || '';

      // Check for Web Share API support
      const hasNativeShare = typeof navigator.share !== 'undefined';

      // Native share handler function
      const handleNativeShare = async () => {
        try {
          await navigator.share({
            title: pageTitle,
            text: pageDescription,
            url: pageUrl,
          });
        } catch (err) {
          console.log('Share cancelled or failed:', err);
        }
      };

      // Setup native share buttons
      if (hasNativeShare) {
        if (nativeShareBtn) {
          nativeShareBtn.classList.remove('hidden');
          nativeShareBtn.classList.add('inline-flex');
          nativeShareBtn.addEventListener('click', handleNativeShare);
        }
        if (compactNativeShareBtn) {
          compactNativeShareBtn.classList.remove('hidden');
          compactNativeShareBtn.classList.add('inline-flex');
          compactNativeShareBtn.addEventListener('click', handleNativeShare);
        }
      }

      // Setup social share URLs
      const twitterUrl = `https://twitter.com/intent/tweet?text=${encodeURIComponent(pageTitle)}&url=${encodeURIComponent(pageUrl)}`;
      const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(pageUrl)}`;
      const whatsappText = `${pageTitle} ${pageUrl}`;
      const whatsappUrl = `https://wa.me/?text=${encodeURIComponent(whatsappText)}`;

      // Set URLs for both bottom and compact buttons
      [twitterShareBtn, compactTwitterShareBtn].forEach(btn => {
        if (btn) btn.setAttribute('href', twitterUrl);
      });

      [linkedinShareBtn, compactLinkedinShareBtn].forEach(btn => {
        if (btn) btn.setAttribute('href', linkedinUrl);
      });

      [whatsappShareBtn, compactWhatsappShareBtn].forEach(btn => {
        if (btn) btn.setAttribute('href', whatsappUrl);
      });

      // Add click handlers to open in popup windows (desktop experience)
      const allSocialButtons = [
        twitterShareBtn, linkedinShareBtn, whatsappShareBtn,
        compactTwitterShareBtn, compactLinkedinShareBtn, compactWhatsappShareBtn
      ];

      allSocialButtons.forEach(btn => {
        if (btn && !hasNativeShare) {
          btn.addEventListener('click', (e) => {
            // Only open in popup on desktop (non-touch devices)
            if (!('ontouchstart' in window)) {
              e.preventDefault();
              const url = btn.getAttribute('href');
              if (url) {
                window.open(
                  url,
                  'share-dialog',
                  'width=600,height=450,location=0,menubar=0,toolbar=0,status=0'
                );
              }
            }
          });
        }
      });
    })();

    // Zen Mode Functionality
    (() => {
      const zenToggleBtn = document.getElementById('zen-mode-toggle');
      const body = document.body;

      if (!zenToggleBtn) return;

      let zenModeActive = false;

      // Check for reduced motion preference
      const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

      function toggleZenMode() {
        zenModeActive = !zenModeActive;

        if (zenModeActive) {
          // Enter zen mode
          if (!prefersReducedMotion) {
            body.classList.add('zen-mode-entering');
          }
          body.classList.add('zen-mode');

          // Scroll to top of article content smoothly
          const articleContent = document.getElementById('zen-article-content');
          if (articleContent) {
            setTimeout(() => {
              window.scrollTo({
                top: 0,
                behavior: prefersReducedMotion ? 'auto' : 'smooth'
              });
            }, 100);
          }

          // Remove entering class after animation
          if (!prefersReducedMotion) {
            setTimeout(() => {
              body.classList.remove('zen-mode-entering');
            }, 500);
          }

          // Update button aria label
          zenToggleBtn.setAttribute('aria-label', 'Exit Zen Mode (Press Z or ESC)');
          zenToggleBtn.setAttribute('title', 'Exit Zen Mode (Z/ESC)');

          // Announce to screen readers
          const announcement = document.createElement('div');
          announcement.setAttribute('role', 'status');
          announcement.setAttribute('aria-live', 'polite');
          announcement.className = 'sr-only';
          announcement.textContent = 'Zen mode activated. Press Z or Escape to exit.';
          document.body.appendChild(announcement);
          setTimeout(() => announcement.remove(), 1000);

        } else {
          // Exit zen mode
          body.classList.remove('zen-mode', 'zen-mode-entering');

          // Update button aria label
          zenToggleBtn.setAttribute('aria-label', 'Toggle Zen Mode (Press Z)');
          zenToggleBtn.setAttribute('title', 'Zen Mode (Z)');

          // Announce to screen readers
          const announcement = document.createElement('div');
          announcement.setAttribute('role', 'status');
          announcement.setAttribute('aria-live', 'polite');
          announcement.className = 'sr-only';
          announcement.textContent = 'Zen mode deactivated.';
          document.body.appendChild(announcement);
          setTimeout(() => announcement.remove(), 1000);
        }

        // Save preference to localStorage (optional)
        try {
          localStorage.setItem('zenMode', zenModeActive ? 'true' : 'false');
        } catch (e) {
          // LocalStorage not available
        }
      }

      // Button click handler
      zenToggleBtn.addEventListener('click', toggleZenMode);

      // Keyboard shortcuts
      document.addEventListener('keydown', (e) => {
        // Z key to toggle (but not when typing in input/textarea)
        if (e.key === 'z' && !e.ctrlKey && !e.metaKey && !e.altKey) {
          const activeElement = document.activeElement;
          const isTyping = activeElement?.tagName === 'INPUT' ||
                          activeElement?.tagName === 'TEXTAREA' ||
                          activeElement?.isContentEditable;

          if (!isTyping) {
            e.preventDefault();
            toggleZenMode();
          }
        }

        // ESC key to exit zen mode
        if (e.key === 'Escape' && zenModeActive) {
          e.preventDefault();
          toggleZenMode();
        }
      });

      // Optional: Restore zen mode preference on page load
      try {
        const savedZenMode = localStorage.getItem('zenMode');
        if (savedZenMode === 'true') {
          // Don't auto-enable on load, but could be enabled if desired
          // toggleZenMode();
        }
      } catch (e) {
        // LocalStorage not available
      }
    })();
  </script>
