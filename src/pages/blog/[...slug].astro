    <!-- Edit on GitHub -->
    <div class="max-w-4xl mx-auto mt-12 pt-8 border-t border-[rgb(var(--color-border))]" data-zen-hide>
      <p class="text-sm text-[rgb(var(--color-text-muted))]">
        Found an issue or want to contribute?
        <a
          href={`https://github.com/alonw0/claude-code-blog/edit/main/src/content/blog/${entry.id}`}
          class="text-[rgb(var(--color-clay))] hover:underline font-mono ml-1"
