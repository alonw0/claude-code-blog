---
interface Props {
  indicator: 'none' | 'minor' | 'major' | 'critical';
  description?: string;
  size?: 'sm' | 'md' | 'lg';
}

const { indicator, description, size = 'md' } = Astro.props;

const statusConfig = {
  none: {
    label: 'Operational',
    color: 'text-green-600 dark:text-green-400',
    bg: 'bg-green-100 dark:bg-green-900/30',
    border: 'border-green-300 dark:border-green-700',
    dotColor: 'bg-green-500'
  },
  minor: {
    label: 'Degraded Performance',
    color: 'text-yellow-600 dark:text-yellow-400',
    bg: 'bg-yellow-100 dark:bg-yellow-900/30',
    border: 'border-yellow-300 dark:border-yellow-700',
    dotColor: 'bg-yellow-500'
  },
  major: {
    label: 'Partial Outage',
    color: 'text-orange-600 dark:text-orange-400',
    bg: 'bg-orange-100 dark:bg-orange-900/30',
    border: 'border-orange-300 dark:border-orange-700',
    dotColor: 'bg-orange-500'
  },
  critical: {
    label: 'Major Outage',
    color: 'text-red-600 dark:text-red-400',
    bg: 'bg-red-100 dark:bg-red-900/30',
    border: 'border-red-300 dark:border-red-700',
    dotColor: 'bg-red-500'
  }
};

const sizeConfig = {
  sm: { badge: 'px-2 py-1 text-xs', dot: 'w-1.5 h-1.5' },
  md: { badge: 'px-3 py-1.5 text-sm', dot: 'w-2 h-2' },
  lg: { badge: 'px-4 py-2 text-base', dot: 'w-2.5 h-2.5' }
};

const config = statusConfig[indicator];
const sizing = sizeConfig[size];
const displayText = description || config.label;
---

<span
  class={`inline-flex items-center gap-2 font-mono font-medium rounded-full border ${config.bg} ${config.border} ${config.color} ${sizing.badge}`}
  role="status"
  aria-label={`Status: ${displayText}`}
>
  <span class={`relative flex ${sizing.dot}`}>
    <span class={`animate-ping absolute inline-flex h-full w-full rounded-full ${config.dotColor} opacity-75`}></span>
    <span class={`relative inline-flex rounded-full ${sizing.dot} ${config.dotColor}`}></span>
  </span>
  <span>{displayText}</span>
</span>
