---
const currentYear = new Date().getFullYear();

const footerLinks = {
  Blog: [
    { href: '/blog', label: 'All Posts' },
    { href: '/authors', label: 'Authors' },
    { href: '/blog/tag/features', label: 'Features' },
    { href: '/blog/tag/guides', label: 'Guides' },
  ],
  Community: [
    { href: '/contribute', label: 'Contribute' },
    { href: 'https://github.com/alonw0/claude-code-blog', label: 'GitHub' },
    { href: 'https://github.com/anthropics/claude-code', label: 'Claude Code' },
    { href: '/rss.xml', label: 'RSS Feed' },
  ],
  Resources: [
    { href: 'https://docs.claude.com/en/docs/claude-code', label: 'Documentation' },
    { href: 'https://claude.ai', label: 'Claude.ai' },
    { href: 'https://anthropic.com', label: 'Anthropic' },
  ],
  'Stay Updated': [
    { href: 'https://www.anthropic.com/news', label: 'Anthropic News' },
    { href: 'https://github.com/anthropics/claude-code/blob/main/CHANGELOG.md', label: 'Changelog' },
    { href: '/status', label: 'System Status' },
  ],
};
---

<footer class="border-t border-[rgb(var(--color-border))] bg-[rgb(var(--color-surface))] mt-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Column -->
      <div class="md:col-span-1">
        <a href="/" class="flex items-center space-x-2 group mb-4">
          <div class="w-8 h-8 bg-gradient-to-br from-[rgb(var(--color-clay))] to-[rgb(var(--color-crail))] rounded-lg flex items-center justify-center clay-glow group-hover:scale-110 transition-transform duration-300">
            <span class="text-white font-mono font-bold text-sm">&gt;_</span>
          </div>
          <span class="font-mono font-bold text-lg">Claude Code<span class="text-[rgb(var(--color-clay))]">.</span></span>
        </a>
        <p class="text-sm text-[rgb(var(--color-text-muted))] mb-4">
          News, features, and guides for Claude Code - the official CLI for Claude.
        </p>
      </div>

      <!-- Link Columns -->
      {Object.entries(footerLinks).map(([title, links]) => (
        <div>
          <h3 class="font-mono font-semibold text-sm mb-4">{title}</h3>
          <ul class="space-y-2">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-clay))] transition-colors duration-300"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-[rgb(var(--color-border))] flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-sm text-[rgb(var(--color-text-muted))]">
        {currentYear} Claude Code Blog. Open source under MIT License.
      </p>
      <div class="flex items-center space-x-1 text-sm text-[rgb(var(--color-text-muted))]">
        <span>Built with</span>
        <a
          href="https://astro.build"
          class="text-[rgb(var(--color-clay))] hover:underline font-mono"
        >
          Astro
        </a>
        <span>&</span>
        <a
          href="https://claude.com/claude-code"
          class="text-[rgb(var(--color-clay))] hover:underline font-mono"
        >
          Claude Code
        </a>
      </div>
    </div>
  </div>
</footer>
