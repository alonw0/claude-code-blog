---
import Button from '../ui/Button.astro';
import ThemeToggle from '../ui/ThemeToggle.astro';

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/blog', label: 'Blog' },
  { href: '/tools', label: 'Tools' },
  { href: '/news', label: 'News' },
  { href: '/status', label: 'Status' },
  { href: '/authors', label: 'Authors' },
  { href: '/contribute', label: 'Contribute' },
];
---

<header class="sticky top-0 z-40 w-full border-b border-[rgb(var(--color-border))] bg-[rgb(var(--color-background))]/80 backdrop-blur-md">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2 group">
        <div class="w-8 h-8 bg-gradient-to-br from-[rgb(var(--color-clay))] to-[rgb(var(--color-crail))] rounded-lg flex items-center justify-center clay-glow group-hover:scale-110 transition-transform duration-300">
          <span class="text-white font-mono font-bold text-sm">&gt;_</span>
        </div>
        <span class="font-mono font-bold text-lg">Claude Code Blog<span class="text-[rgb(var(--color-clay))]">.</span></span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-6">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="font-mono text-sm text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-clay))] transition-colors duration-300"
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Actions -->
      <div class="flex items-center space-x-3">
        <!-- Version Badge -->
        <a
          href="/changelog"
          class="hidden md:inline-flex items-center hover:scale-105 transition-transform duration-300"
          title="View Claude Code Changelog"
        >
          <img
            src="https://img.shields.io/npm/v/@anthropic-ai/claude-code.svg?style=flat-square"
            alt="Claude Code Version"
            class="h-5"
          />
        </a>
        <ThemeToggle />
        <a
          href="https://github.com/alonw0/claude-code-blog"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center w-10 h-10 rounded-lg border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-clay))] transition-all duration-300"
          aria-label="GitHub"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              fill-rule="evenodd"
              d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
              clip-rule="evenodd"
            />
          </svg>
        </a>
        <div class="hidden md:inline-flex">
          <Button href="/contribute" variant="primary" size="sm">
            Contribute
          </Button>
        </div>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden inline-flex items-center justify-center w-10 h-10 rounded-lg border border-[rgb(var(--color-border))] hover:border-[rgb(var(--color-clay))] transition-all duration-300"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden pb-4">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="block py-3 font-mono text-base text-[rgb(var(--color-text-muted))] hover:text-[rgb(var(--color-clay))] transition-colors duration-300"
        >
          {item.label}
        </a>
      ))}
      <div class="pt-2">
        <Button href="/contribute" variant="primary" size="sm" class="w-auto px-2 py-1 text-xs">
          Contribute
        </Button>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const toggleButton = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  toggleButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
